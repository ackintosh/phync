#!/usr/bin/env php
<?php
/**
 * This file is part of Phync.
 *
 * (c) Yuya Takeyama
 *
 * For the full copyright and license information, please view the LICENSE
 * file that was distributed with this source code.
 */

set_include_path(
    dirname(__FILE__) . '/../src' . PATH_SEPARATOR .
    dirname(__FILE__) . '/../vendor/pear' . PATH_SEPARATOR .
    get_include_path()
);
require_once 'Phync.php';

echo "Phync ver. " . Phync::VERSION, PHP_EOL, PHP_EOL;
try {
    exit(Phync_Application::start());
} catch (Exception $e) {
    $klass = get_class($e);
    echo "{$klass}: {$e->getMessage()}", PHP_EOL;
    exit(Phync_Application::STATUS_EXCEPTION);
}
